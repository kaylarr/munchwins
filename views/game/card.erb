<div class="player-card">
  <div class="player-name"><%= player.name %></div>
  <div class="player-level"><%= player.level %></div>
  <%= player.gender %>

  <div class="level-buttons">
    <a href="/player/<%= player.id %>/up">
      <div class="level-button level-up">
        up
      </div>
    </a>
    <a href="/player/<%= player.id %>/down">
      <div class="level-button level-down">
        down
      </div>
    </a>
  </div>

  <div class="gender-button">
    <a href="/player/<%= player.id %>/sexchange">
      sex change
    </a>
  </div>
</div>